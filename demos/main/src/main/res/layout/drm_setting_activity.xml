<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextJwtServerUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入JWT URL"
        android:text="" />

    <EditText
        android:id="@+id/editTextJwtUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入JWT用户名"
        android:text="" />

    <EditText
        android:id="@+id/editTextJwtUserPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入JWT密码"
        android:text="" />

    <CheckBox
        android:id="@+id/chkVisibleWatermark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示水印" />

    <Button
        android:id="@+id/buttonCreateToken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取JWT" />
</LinearLayout>